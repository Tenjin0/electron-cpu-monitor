{
  "name": "cpu-monitor",
  "productName": "cpu-monitor",
  "version": "1.0.0",
  "description": "cpu usage electron app",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=development npx electron-forge start",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder --publish always",
    "pack": "electron-builder --dir"
  },
  "keywords": [],
  "author": {
    "name": "Tenji",
    "email": "patricepetit@hotmail.com"
  },
  "build": {
    "appId": "tenji.cpu-monitor",
    "productName": "cpu-monitor",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
	"repository": {
		"type" : "git",
		"url" : "https://github.com/Tenjin0/electron-cpu-monitor.git"
	},
  "license": "MIT",
  "dependencies": {
    "electron-updater": "^4.3.8",
    "os-utils": "^0.0.14"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "devtron": "^1.4.0",
    "electron": "12.0.4",
    "electron-builder": "^22.10.5"
  }
}
